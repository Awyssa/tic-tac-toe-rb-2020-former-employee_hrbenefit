#!/usr/bin/env ruby

require_relative '../lib/tic_tac_toe'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)
puts "Please put a number between 1-9"

user_input = gets.strip

index = input_to_index(user_input)

move(board,index, "X")
display_board(board)
